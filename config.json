{
	"setup": [
		{
			"name": "brew",
			"to_install": true,
			"commands": [
				"curl -fsSL https://rawgit.com/kube/42homebrew/master/install.sh | zsh",
				"[ -d ~/goinfre ] || ln -s /goinfre/$(whoami) ~/goinfre",
				"mv ~/.brew ~/goinfre",
				"ln -s ~/goinfre/.brew ~/.brew"
			]
		},
		{
			"name": "node & npm",
			"to_install": false,
			"commands": [
				"~/.brew/bin/brew install node",
				"mv ~/.npm ~/goinfre",
				"ln -s ~/goinfre/.npm ~/.npm"
			]
		},
		{
			"name": "nvm",
			"to_install": false,
			"commands": [
				"~/.brew/bin/brew install nvm",
				"[ -d ~/.nvm ] || mkdir ~/.nvm",
				"mv ~/.npm ~/goinfre",
				"ln -s ~/goinfre/.npm ~/.npm",
				"echo \"export NVM_DIR=~/.nvm\" >> ~/.zshrc",
				"echo \"source $(brew --prefix nvm)/nvm.sh\" >> ~/.zshrc"
			]
		},
		{
			"name": "yarn",
			"to_install": false,
			"commands": [
				"~/.brew/bin/npm install --global yarn"
			]
		},
		{
			"name": "docker",
			"to_install": false,
			"commands": [
				"~/.brew/bin/brew install docker"
			]
		},
		{
			"name": "docker configuration",
			"to_install": false,
			"commands": [
				"echo \"please run the following commands after creating your first docker machine/pull ur first image\"",
				"[ -d ~/.docker ] || mkdir ~/.docker",
				"mv ~/.docker ~/goinfre",
				"ln -s ~/goinfre/.docker ~/.docker",
				"mv ~/Library/Containers/com.docker.docker ~/goinfre",
				"ln -s ~/goinfre/com.docker.docker ~/Library/Containers/com.docker.docker"
			]
		},
		{
			"name": "docker-machine",
			"to_install": false,
			"commands": [
				"~/.brew/bin/brew install docker-machine"
			]
		},
		{
			"name": "docker-compose",
			"to_install": false,
			"commands": [
				"~/.brew/bin/brew install docker-compose"
			]
		}
	]
}